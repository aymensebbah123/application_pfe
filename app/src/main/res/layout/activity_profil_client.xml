<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/technicienelectrique"
    tools:context=".compte_technicien">

    <LinearLayout
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="voici les informations"
            android:id="@+id/espacetechnicien"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/cornflower_blue"/>
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom  :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewName"
            android:layout_marginTop="20dp"
            android:text="Email :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewVille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewEmail"
            android:layout_marginTop="20dp"
            android:text="Ville :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewTelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewVille"
            android:layout_marginTop="27dp"
            android:text="Téléphone :"
            android:textSize="20sp" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/buttonModifier"
            android:text="Modifier"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/cornflower_blue"
            app:cornerRadius = "20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Retour"
            android:id="@+id/buttonRetour"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/cornflower_blue"
            app:cornerRadius = "20dp"/>




    </LinearLayout>
</LinearLayout>





